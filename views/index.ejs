<%- include("partials/header.ejs") %> <%- include("partials/navbar.ejs") %>
<div class="container">
  <hr>
  <h2>Perguntas</h2>
  <hr>
  <a href="/perguntar" class="btn btn-primary">Perguntar</a>
  <hr>
  <br>
  <% perguntas.forEach((pergunta)=>{ %>
    <br>
  <div class="card m">
      <div class="card-body">
        <h3><%= pergunta.titulo %> </h3>

      </div>
      <div class="card-footer">
        <p class="text-muted"><small>Perguntada: <%= pergunta.createdAt %> </small></p>
        
        <a class="btn btn-sm btn-primary" href="/pergunta/<%= pergunta.id %> ">Responder</a>
      </div>
    </div>
    
    <% }) %>
  
</div>
